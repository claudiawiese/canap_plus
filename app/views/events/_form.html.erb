<%= simple_form_for(@event) do |f| %>

  <%= f.input :game %>
  <%= f.input :description %>
  <%= f.input :date, as: :date, html5: true %>
  <%= f.input :address %>
  <%= f.input :capacity %>
  <%= f.input :fee %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.button :submit, "Add your event" %>
<% end %>
