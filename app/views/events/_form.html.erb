<%= simple_form_for(@event) do |f| %>

  <%= f.input :game %>
  <%= f.input :description %>
  <%= f.input :date,
              html5: true %>
  <%= f.input :address %>
  <%= f.input :capacity %>
  <%= f.input :fee %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <div class="form-actions text-center">
    <div class="form-actions">
  <%= f.button :submit, "Add your event", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
